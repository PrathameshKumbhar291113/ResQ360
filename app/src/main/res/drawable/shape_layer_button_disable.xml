<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item>
        <shape>
            <solid android:color="@color/grey_dark" />
            <corners android:radius="20dp" />
        </shape>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".features.main.auth.agency.register.AgencyRegisterFragmentStep1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/register_your_agency" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginHorizontal="15dp">

<!--            <ImageView-->
<!--                android:id="@+id/step1"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:padding="5dp"-->
<!--                android:src="@drawable/ic_success"-->
<!--                android:background="@drawable/done" />-->

            <TextView
                android:id="@+id/step1"
                android:background="@drawable/in_progress"
                android:text="1"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <View
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:background="@drawable/in_progress_line_shape"
                android:layout_height="3dp" />

            <TextView
                android:id="@+id/step2"
                android:background="@drawable/in_progress"
                android:text="2"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <View
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:background="@drawable/in_progress_line_shape"
                android:layout_height="3dp" />

            <TextView
                android:id="@+id/step3"
                android:background="@drawable/in_progress"
                android:text="3"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <View
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:background="@drawable/in_progress_line_shape"
                android:layout_height="3dp" />

            <TextView
                android:id="@+id/step4"
                android:background="@drawable/in_progress"
                android:text="4"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="30dp"
                android:layout_height="30dp" />

</LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_information"
            android:padding="4dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginHorizontal="10dp"
            android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_card_gradient">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agency Name"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/agencyNameIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/agencyNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/shape_white_corner_5dp"
                        android:hint="Enter Name"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agency Organization"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/orgIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/orgET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Organization"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/shape_white_corner_5dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agency ID"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/agencyIDIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/agencyIDET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter ID"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/shape_white_corner_5dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agency Email"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/agencyEmailIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/agencyEmailET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Email"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/shape_white_corner_5dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agency Address"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/agencyAddressIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/agencyAddressET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Address"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/shape_white_corner_5dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/shape_layer_button"
            android:text="Next"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
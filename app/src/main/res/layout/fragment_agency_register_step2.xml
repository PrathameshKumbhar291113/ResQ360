<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".features.main.auth.agency.register.AgencyRegisterFragmentStep2">

    <TextView
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/register_your_agency" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginHorizontal="15dp">

                    <ImageView
                        android:id="@+id/step1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_success"
                        android:background="@drawable/done" />

<!--        <TextView-->
<!--            android:id="@+id/step1"-->
<!--            android:background="@drawable/in_progress"-->
<!--            android:text="1"-->
<!--            android:textSize="14sp"-->
<!--            android:gravity="center"-->
<!--            android:fontFamily="@font/montserrat_semibold"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp" />-->

        <View
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:background="@drawable/done_line_shape"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/step2"
            android:background="@drawable/in_progress"
            android:text="2"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <View
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:background="@drawable/in_progress_line_shape"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/step3"
            android:background="@drawable/in_progress"
            android:text="3"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <View
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:background="@drawable/in_progress_line_shape"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/step4"
            android:background="@drawable/in_progress"
            android:text="4"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_card_gradient">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/shape_layer_button_disable"
            android:text="Next"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
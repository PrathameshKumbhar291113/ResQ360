<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".features.main.auth.agency.register.AgencyRegisterFragmentStep4">
<!-- TODO remove the material text input layout-->
    <TextView
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/register_your_agency" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginHorizontal="15dp">

        <ImageView
            android:id="@+id/step1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/ic_success"
            android:background="@drawable/done" />

        <!--        <TextView-->
        <!--            android:id="@+id/step1"-->
        <!--            android:background="@drawable/in_progress"-->
        <!--            android:text="1"-->
        <!--            android:textSize="14sp"-->
        <!--            android:gravity="center"-->
        <!--            android:fontFamily="@font/montserrat_semibold"-->
        <!--            android:layout_width="30dp"-->
        <!--            android:layout_height="30dp" />-->

        <View
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:background="@drawable/done_line_shape"
            android:layout_height="3dp" />

        <!--        <TextView-->
        <!--            android:id="@+id/step2"-->
        <!--            android:background="@drawable/in_progress"-->
        <!--            android:text="2"-->
        <!--            android:textSize="14sp"-->
        <!--            android:gravity="center"-->
        <!--            android:fontFamily="@font/montserrat_semibold"-->
        <!--            android:layout_width="30dp"-->
        <!--            android:layout_height="30dp" />-->

        <ImageView
            android:id="@+id/step2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/ic_success"
            android:background="@drawable/done" />

        <View
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:background="@drawable/done_line_shape"
            android:layout_height="3dp" />

<!--        <TextView-->
<!--            android:id="@+id/step3"-->
<!--            android:background="@drawable/in_progress"-->
<!--            android:text="3"-->
<!--            android:textSize="14sp"-->
<!--            android:gravity="center"-->
<!--            android:fontFamily="@font/montserrat_semibold"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp" />-->

        <ImageView
            android:id="@+id/step3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/ic_success"
            android:background="@drawable/done" />

        <View
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:background="@drawable/done_line_shape"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/step4"
            android:background="@drawable/in_progress"
            android:text="4"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:padding="4dp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginHorizontal="10dp"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_card_gradient">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agency License"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"/>


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/agencyLicenseET"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter License"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="8dp"
                        android:elevation="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/palate_big_stone"
                        android:textColorHint="@color/very_dark_blue"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/shape_white_corner_5dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload An Image"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Upload Documents"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat"
                    android:paddingVertical="8dp"
                    android:background="@drawable/upload_image"
                    android:paddingHorizontal="8dp"/>


            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/shape_layer_button_disable"
            android:text="Submit"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>